
<div class="row mb-3">
  <div class="col-sm-6">
 
<h2>My Boards <span class="badge bg-warning"><%= link_to image_tag('logo-sm.png'), root_path, class: 'logo-sm' %></span></h2>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_board_path, class: 'btn btn-success mb-3' do %>
    Add New Board
  <% end %>
  </div>
</div>

 <div class="row mb-3 mt-3">
    <% @boards.each do |board| %>
      <div class="col-sm-4 col-md-4">
     <%= render board %>
        <%= link_to board_path(board), class: 'btn btn-outline-primary btn-sm mt-3' do %>
      View Board
    <% end %>
      </div>
    <% end %>
  </div>



    



      
